{% extends "abstracts/base.twig" %}

{% block title %}
    user - {{ post.name }}
{% endblock %}

{% block content %}
    <article class="post">
        <h2> {{ post.name }}</h2>
        <p>Author: <a href="/users/{{ post.users.id }}">{{ post.users.name }}</a></p>
        <hr>
        <div class="post-body">
            <p>{{ post.body }}</p>
        </div>
    </article>
{% endblock %}