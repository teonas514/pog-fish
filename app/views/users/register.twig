{% extends "abstracts/base.twig" %}

{% block title %}
    register
{% endblock %}

{% block content %}
    <h1> register </h1>
    <form enctype="multipart/form-data" method="post" action="/security-check">
        <label>name:</label>
        <input name="name" type="text">
        <label>password:</label>
        <input name="password" type="password">
        <label>profile picture:</label>
        <input name="profile-picture" type="file">
        <button type="submit" name="register">REGISTER</button>
    </form>
    <p>
    <span class="warning">/!\ Do not use a password you use for any other services. This website has poor security. /!\</span>
    </p>
{% endblock %}